{
  "name": "@erp/backend",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development tsx ../server/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "esbuild ../server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "check": "tsc -p ../tsconfig.json",
    "db:push": "drizzle-kit push",
    "reset:db": "tsx ../server/reset-db.ts",
    "reset:db:sample": "tsx ../server/reset-db.ts --sample"
  },
  "dependencies": {
    "express": "^4.21.2",
    "pg": "^8.16.3",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.2.0",
    "express-rate-limit": "^7.5.1",
    "exceljs": "^4.3.0",
    "ws": "^8.18.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "esbuild": "^0.25.0",
    "typescript": "5.6.3",
    "drizzle-kit": "^0.31.7"
  }
}
