# Backend Environment Variables
# Copy to .env and adjust for production.

# PostgreSQL connection string
DATABASE_URL=postgres://school_erp:school_erp_pass@localhost:15432/school_erp

# JWT secret (change in production; 32+ random chars)
JWT_SECRET=replace-with-long-random-secret

# Frontend origin allowed by CORS (protocol+host+port)
FRONTEND_ORIGIN=http://localhost:5173

# Public backend base URL (used by docs / emails if any)
BACKEND_PUBLIC_URL=http://localhost:3000

# Frontend build-time base API URL (vite)
VITE_API_BASE_URL=http://localhost:3000
